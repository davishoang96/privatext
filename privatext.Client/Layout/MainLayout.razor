@inherits LayoutComponentBase
<MudThemeProvider IsDarkMode="true" Theme="_theme" DefaultScrollbar="true" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="header">Privatext</MudText>
        <MudSpacer />
        <MudStack Row="true">
            <MudLink Href="/about">About</MudLink>
            <MudLink Href="https://vhdevblog.com/posts">Blog</MudLink>
        </MudStack>
    </MudAppBar>
    <MudMainContent Class="mt-16 pa-4">
        <MudContainer MaxWidth="MaxWidth.Medium">
            <MudGrid Spacing="3">
                <MudItem lg="3" md="3"></MudItem>
                <MudItem xs="12" md="6" lg="6">
                    @Body
                </MudItem>
                <MudItem lg="3" md="3"></MudItem>
            </MudGrid>
        </MudContainer>
    </MudMainContent>
</MudLayout>

<style>
    .header{
        color: white;
        padding: 10px;
        text-align: left;
        font-size: 24px;
        font-family: Consolas
    }
</style>

@code{
    private MudTheme _theme = new()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = Colors.Blue.Lighten1,
            Background = "#0d1117",
        },
    };
}